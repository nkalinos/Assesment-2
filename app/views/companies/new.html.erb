<%= form_for @company, html: {class:"form-horizontal"} do |f| %>

<p>
<%= f.label :company_name %>
<%= f.text_field :company_name %>
</p>

<p>
  <%= f.label :description %>
  <%= f.text_area :description %>
</p>

<p>
  <%= f.label :price %>
  <%= f.number_field :price %>
</p>

<p>
  <%= f.submit "Create Company" %>
</p>

<% end %>
