<h1> <%= link_to @company.company_name, companies_path  %> </h1>

<table>
  <thead>
    <tr>
      <th>Company Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Created At</th>
      <th>Updated At</th>

      <%= link_to "Edit", edit_company_path %>

      <%= link_to 'Delete', company_path, method: :delete, data: { confirm: 'Are you sure?' } %>

    </tr>
  </thead>
  <tbody>
      <tr>
        <td> <%= @company.company_name %> </td>
        <td> <%= @company.description %>
        <td> <%= @company.price %> </td>
        <td> <%= @company.created_at %> </td>
        <td> <%= @company.updated_at %> </td>
      </tr>
  </tbody>
</table>

<h1>Industries</h1>
<table>
  <thead>
    <tr>
      <th>Select Associated Industries</th>
    </tr>
  </thead>
  <tbody>
    <%= form_for [@industry, @company], html: {class:"form-horizontal"} do |f| %>
    <tr>
      <td> <%= collection_select( :industry, :industry_id, Industry.all, :id, :name, {}, ) %> <%= f.submit "Add Industry"  %> </td>
    <% end %>
    </tr>
  </tbody>
</table>
